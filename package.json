{
	"name": "can-pnpm",
	"version": "0.1.0",
	"description": "Check if pnpm is used instead of npm",
	"license": "MIT",
	"repository": "ahmadawais/can-pnpm",
	"author": {
		"name": "Ahmad Awais",
		"email": "me@AhmadAwais.com",
		"url": "https://twitter.com/MrAhmadAwais"
	},
	"keywords": [
		"can-pnpm",
		"can-pnpm",
		"Ahmad Awais",
		"ahmadawais"
	],
	"devDependencies": {
		"@types/node": "^22.2.0",
		"prettier": "^2.0.2",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"vitest": "^2.0.5"
	},
	"dependencies": {
		"execa": "^9.3.0"
	},
	"files": [
		"dist",
		"*.d.ts"
	],
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"dev": "npm run build -- --watch",
		"build": "tsup index.js --format cjs,esm --dts --sourcemap --clean --minify --shims",
		"prepublishOnly": "npm run build",
		"format": "prettier --write \"./**/*.{js,json}\""
	}
}
